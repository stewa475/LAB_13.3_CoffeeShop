
@{
    ViewData["Title"] = "Admin Index";
    List<Product> Products = (List<Product>)ViewData["Products"];
}

<h1>Product Administration</h1>
@if (TempData["UserMsg"] != null)
{
    <p>@TempData["UserMsg"]</p>
}


<div><a href="/Admin/AddForm" class="btn btn-primary">Add</a></div>
<br />
<h2>Product List</h2>
<p>______________________________________________________________________________________________________________________________________________________________________</p>

@foreach (Product p in Products)
{
<div>
    <a href="/Admin/Edit/@p.Id" class="btn btn-primary">Edit</a>&nbsp;
    <a href="/Admin/DeleteForm/@p.Id" class="btn btn-primary">Delete</a>&nbsp;
    @p.Name (@p.Category) @p.Price.ToString("C")
    <p>______________________________________________________________________________________________________________________________________________________________________</p>
</div>
}
